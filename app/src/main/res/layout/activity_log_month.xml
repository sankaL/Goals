<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanke.goals.LogMonthActivity"
    android:background="@mipmap/backgound18">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="January"
                android:id="@+id/janButton"
                android:onClick="onClickJanuary"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="February"
                android:id="@+id/febButton"
                android:onClick="onClickFebruary"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="March"
                android:id="@+id/marchButton"
                android:layout_weight="0.62"
                android:onClick="onClickMarch"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="April"
                android:id="@+id/aprilButton"
                android:onClick="onClickApril"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="May"
                android:id="@+id/mayButton"
                android:onClick="onClickMay"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="June"
                android:id="@+id/juneButton"
                android:onClick="onClickJune"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="July"
                android:id="@+id/julyButton"
                android:onClick="onClickJuly"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="August"
                android:id="@+id/augButton"
                android:onClick="onClickAugust"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="September"
                android:id="@+id/sepButton"
                android:onClick="onClickSeptember"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="October"
                android:id="@+id/octButton"
                android:onClick="onClickOctober"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="November"
                android:id="@+id/novButton"
                android:onClick="onClickNovember"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:text="December"
                android:id="@+id/decButton"
                android:onClick="onClickDecember"
                android:textColor="#e2e2e2"
                android:textSize="14sp"
                android:background="@drawable/button8_shape"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_margin="8dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MONTHS"
        android:id="@+id/headingMonthsText"
        android:layout_marginTop="15dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
