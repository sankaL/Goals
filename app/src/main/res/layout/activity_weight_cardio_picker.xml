<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanke.goals2.WeightCardioPicker"
    android:background="@mipmap/backgound18"
    android:padding="30dp">

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="weights"
        android:id="@+id/weightsButton"
        android:layout_marginTop="55dp"
        android:onClick="onClickWeights"
        android:background="@drawable/button1_shape"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="16dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="cardio"
        android:id="@+id/cardioButton"
        android:onClick="onClickCardio"
        android:background="@drawable/button1_shape"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/weightsButton"
        android:layout_marginBottom="58dp"
        android:textSize="16dp" />

</RelativeLayout>
