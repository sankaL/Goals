<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sanke.goals.CardioActivity"
    android:background="@mipmap/backgound19">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Type:"
                android:id="@+id/cardioTypeText"
                android:layout_gravity="center_vertical"
                android:textColor="#dcdcdc" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardioTypeSpinner"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Duration:"
                android:id="@+id/cardioDurationText"
                android:layout_gravity="center_vertical"
                android:textColor="#dcdcdc" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/CardioDurationEditText"
                android:layout_weight="1"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Distance:"
                android:id="@+id/cardioDistanceText"
                android:layout_gravity="center_vertical"
                android:textColor="#dcdcdc" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/CardioDistanceSpinner"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Level:"
                android:id="@+id/cardioLevelText"
                android:layout_gravity="center_vertical"
                android:textColor="#dcdcdc" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardioLevelSpinner"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp">

            <Button
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="menu"
                android:id="@+id/cardioBackButton"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button7_shape"
                android:textColor="#e7e7e7"
                android:layout_margin="10dp"
                android:onClick="onClickcardioBackButton" />

            <Button
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:text="Log session"
                android:id="@+id/cardioLogSession"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button7_shape"
                android:textColor="#e7e7e7"
                android:layout_margin="10dp"
                android:nestedScrollingEnabled="false"
                android:onClick="onClickCardioLogSession" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
