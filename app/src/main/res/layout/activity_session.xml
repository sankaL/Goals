<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SessionActivity"
    android:background="@mipmap/backgound18">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/armButton"

            android:text="ARMS"
            android:textColor="#ffffff"
            android:textSize="13sp"

            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button7_shape"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="onClickArms"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/legsButton"

            android:text="legs"
            android:textColor="#ffffff"
            android:textSize="13sp"

            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button7_shape"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="onClickLegs"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/chestButton"

            android:text="chest"
            android:textColor="#ffffff"
            android:textSize="13sp"

            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button7_shape"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="onClickChest"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/backButton"
            android:text="back"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button7_shape"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="onClickBack"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/shoulderButton"
            android:text="shoulders/abs"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button7_shape"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="onClickShoulders"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/cardioButton"
            android:text="cardio"
            android:textColor="#010101"
            android:textSize="13sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/button4_shape"
            android:shadowDx="0"
            android:shadowDy="0"
            android:onClick="onClickCardio"
            android:layout_margin="10dp" />


    </LinearLayout>

</RelativeLayout>
